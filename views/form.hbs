<form action="/submit" method="POST">
    <div class="form-group">
        <label for="item">Item</label>
        <input type="text" name="item" id="item" class="form-control" placeholder="Please select an item">
    </div>
    <div class="form-group">
        <label for="qty">Quantity</label>
        <input min="1" type="number" name="qty" id="qty" class="form-control">
    </div>
    <div class="input-group">
        <label for="unit">Unit</label>
        <div class="input-group">
            <div class="input-group-prepend">
                <span class="input-group-text">$</span>
            </div>
            <input type="text" name="unit" id="unit" class="form-control" placeholder="Cost per unit item">
        </div>
    </div>

    <div class="d-flex justify-content-end mb-4">
        <button type="submit" class="btn btn-lg btn-outline-primary mt-4">Add to Cart</button>
    </div>
    <input type="hidden" name="cartState" value= "{{cartState}}">

</form>

{{#if cart}}
